{
    "swagger": "2.0",
    "info": {
        "version": "5.0.1",
        "description": "API for E-commerce application",
        "title": "E-Commerce API"
    },
    "host": "localhost:3000",
    "securityDefinitions": {
        "JWT": {
            "in": "header",
            "name": "Authorization",
            "type": "apiKey"
        }
    },
    "paths": {
        "/api/users/signin": {
            "post": {
                "tags": ["Users"],
                "summary": "Login",
                "description": "User login to get token",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "User Credentials",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Invalid email or password."
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "tags": ["Products"],
                "summary": "Get Products",
                "description": "Retrieve a list of products",
                "security": [
                    {
                        "JWT": {}
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "401": {
            "description": "Could not find the product."
        }
    }
}